                                        <Button Grid.Row="1" Style="{StaticResource MenuItemButton}" Click="PhotoelectricMaintenanceClick">光电维护</Button>
                                        <!--Popup x:Name="popup42" Grid.Row="1" StaysOpen="False" IsOpen="False" PlacementTarget="{Binding ElementName=menu42}" Placement="Right" VerticalOffset="-5" AllowsTransparency="True">
                                        <Border BorderThickness="2" BorderBrush="SteelBlue" Background="#d9ebf6">
                                            <Grid>
