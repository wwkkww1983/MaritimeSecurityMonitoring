<UserControl x:Class="MaritimeSecurityMonitoring.Content.DeviceIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MaritimeSecurityMonitoring.Content"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             x:Name="deviceIcon"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image Height="60" Width="50" Source="{Binding ElementName=deviceIcon, Path=ImgSource}"></Image>
        <TextBlock Grid.Row="1" TextAlignment="Center" Text="{Binding ElementName=deviceIcon, Path=DeviceName}"></TextBlock>
    </Grid>
</UserControl>
